{
  "name": "harumnesia-backend",
  "version": "1.0.0",
  "description": "Backend API server for Harumnesia - Local Indonesian Perfume Recommendation Platform",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed": "node seeder.js",
    "test-inter": "node test-inter-api.js",
    "test-ml": "node test-ml-service.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop harumnesia-api",
    "pm2:restart": "pm2 restart harumnesia-api",
    "pm2:delete": "pm2 delete harumnesia-api",
    "pm2:logs": "pm2 logs harumnesia-api"
  },
  "keywords": [
    "perfume",
    "recommendation",
    "api",
    "nodejs",
    "express",
    "mongodb",
    "harumnesia",
    "indonesian-perfume"
  ],
  "author": "Harumnesia Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/harumnesia-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/harumnesia-backend/issues"
  },
  "homepage": "https://github.com/yourusername/harumnesia-backend#readme"
}
